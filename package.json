{
   "$schema": "https://json.schemastore.org/package.json",
   "name": "agilekit",
   "version": "1.0.0",
   "type": "module",
   "description": "AgileKit provides a comprehensive framework for AI to assist with agile software development processes.",
   "license": "Apache-2.0",
   "author": "Sarin Na Wangkanai",
   "homepage": "https://github.com/wangkanai/agilekit",
   "keywords": [
      "agile",
      "ai",
      "orchestrator",
      "agents",
      "development",
      "methodology"
   ],
   "main": "src/index.ts",
   "bin": {
      "agile": "./bin/index.js"
   },
   "scripts": {
      "build": "tsc && chmod +x bin/index.js",
      "dev": "nodemon --watch src --watch tests --ext ts,json --exec \"npm run build && npm link\"",
      "start:dev": "ts-node src/index.ts",
      "format:check": "prettier --check \"**/*.{ts,tsx,json,md,yaml}\"",
      "format:fix": "prettier --write \"**/*.{ts,tsx,json,md,yaml}\"",
      "lint": "tslint *.ts,*tsx,*.json,*.md,*.yaml",
      "lint:fix": "tslint *.ts,*tsx,*.json,*.md,*.yaml --fix",
      "prepare": "husky",
      "test": "echo \"Error: no test specified\" && exit 1",
      "knip": "knip"
   },
   "dependencies": {
      "chalk": "^5.6.2",
      "commander": "^14.0.2",
      "ora": "^9.0.0",
      "semver": "^7.7.3"
   },
   "devDependencies": {
      "@types/minimist": "^1.2.5",
      "@types/mocha": "^10.0.10",
      "@types/ms": "^2.1.0",
      "@types/node": "^24.10.1",
      "@types/source-map-support": "^0.5.10",
      "@types/which": "^3.0.4",
      "@typescript-eslint/rule-tester": "^8.48.0",
      "@typescript-eslint/type-utils": "^8.48.0",
      "@typescript-eslint/utils": "^8.48.0",
      "c8": "^10.1.3",
      "eslint": "^9.39.1",
      "eslint-formatter-autolinkable-stylish": "^1.4.0",
      "eslint-plugin-regexp": "^2.10.0",
      "globals": "^16.5.0",
      "hereby": "^1.11.1",
      "husky": "^9.1.7",
      "knip": "^5.71.0",
      "lint-staged": "^16.2.7",
      "markdownlint-cli2": "^0.19.1",
      "minimist": "^1.2.8",
      "mocha": "^11.7.5",
      "ms": "^2.1.3",
      "nodemon": "^3.1.11",
      "prettier": "^3.7.2",
      "prettier-plugin-packagejson": "^2.5.20",
      "source-map-support": "^0.5.21",
      "ts-node": "^10.9.2",
      "typescript": "^5.9.3",
      "typescript-eslint": "^8.48.0",
      "which": "^6.0.0"
   },
   "lint-staged": {
      "*.{ts,tsx}": [
         "npm run lint:fix",
         "npm run format:fix"
      ],
      "*.yaml": [
         "tslint --fix",
         "npm run format:fix"
      ],
      "*.{json,md}": [
         "npm run format:fix"
      ]
   },
   "engines": {
      "node": ">=24"
   },
   "bugs": {
      "url": "https://github.com/wangkanai/agilekit/issues"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/wangkanai/agilekit.git"
   },
   "directories": {
      "doc": "docs"
   },
   "publishConfig": {
      "access": "public"
   }
}
